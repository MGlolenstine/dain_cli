    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'dain-cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=dain-cli",
                    "--package=dain-cli"
                ],
                "filter": {
                    "name": "dain-cli",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "info"
            },
            "args": [
                "original.mp4",
                "output.mp4",
                "rife"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'dain-cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=dain-cli",
                    "--package=dain-cli"
                ],
                "filter": {
                    "name": "dain-cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}